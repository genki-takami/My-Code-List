<?xml version="1.0" encoding="utf-8"?>
<!--プレビューのレイアウト-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".PreviewAndShare">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <Button
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:backgroundTint="#E47504"
                android:text="共有"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/preinjuredPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:text="負傷者\n名前"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/prereporterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/preinjuredPersonName"
                android:layout_alignParentStart="true"
                android:text="報告者\n名前"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/predateAndTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prereporterName"
                android:layout_alignParentStart="true"
                android:text="日時\n年月日"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/preinjuredPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/predateAndTimes"
                android:layout_alignParentStart="true"
                android:text="場所\n名前"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/preinjuredPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/preinjuredPlace"
                android:layout_alignParentStart="true"
                android:text="部位\n名前"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/prediagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/preinjuredPosition"
                android:layout_alignParentStart="true"
                android:text="診断名\n名前"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/precause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prediagnosis"
                android:layout_alignParentStart="true"
                android:text="原因\n名前"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/preafterEffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precause"
                android:layout_alignParentStart="true"
                android:text="後遺症など\n名前"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/preimageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_below="@+id/preafterEffect"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#51000000"
                android:scaleType="centerInside"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </RelativeLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>