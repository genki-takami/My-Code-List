<?xml version="1.0" encoding="utf-8"?>
<!-- Manifest file -->
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.creative.primefunc.genki.takami.psynavi">

    <!-- 位置情報の許可 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- アプリケーション -->
    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!-- Google MapsのAPIkey -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- 地図 -->
        <activity
            android:name=".ReadingMapView"
            android:theme="@style/AppTheme"
            android:label="@string/title_activity_reading_map_view"
            android:screenOrientation="portrait">
        </activity>

        <!-- イベントの詳細画像 -->
        <activity
            android:name=".ReadingEventShowImage"
            android:screenOrientation="portrait">
        </activity>

        <!-- イベント -->
        <activity
            android:name=".ReadingEventContent"
            android:screenOrientation="portrait">
        </activity>

        <!-- 展示 -->
        <activity
            android:name=".ReadingDisplayContent"
            android:screenOrientation="portrait">
        </activity>

        <!-- ショップ -->
        <activity
            android:name=".ReadingShopContent"
            android:screenOrientation="portrait">
        </activity>

        <!-- 運営者情報 -->
        <activity
            android:name=".ManagerInfo"
            android:screenOrientation="portrait">
        </activity>

        <!-- お問い合わせ -->
        <activity
            android:name=".ContactForm"
            android:screenOrientation="portrait">
        </activity>

        <!-- プライバシーポリシー -->
        <activity
            android:name=".PrivacyPolicy"
            android:screenOrientation="portrait">
        </activity>

        <!-- 利用規約 -->
        <activity
            android:name=".UserPolicy"
            android:screenOrientation="portrait">
        </activity>

        <!-- 使用ガイド -->
        <activity
            android:name=".UserGuide"
            android:screenOrientation="portrait">
        </activity>

        <!-- コメントネームの編集 -->
        <activity
            android:name=".CommentNameEdit"
            android:screenOrientation="portrait">
        </activity>

        <!-- お知らせ -->
        <activity
            android:name=".ReadingNotice"
            android:screenOrientation="portrait">
        </activity>

        <!-- イベントリスト -->
        <activity
            android:name=".ReadingEventList"
            android:screenOrientation="portrait">
        </activity>

        <!-- 展示リスト -->
        <activity
            android:name=".ReadingDisplayList"
            android:screenOrientation="portrait">
        </activity>

        <!-- ショップリスト -->
        <activity
            android:name=".ReadingShopList"
            android:screenOrientation="portrait">
        </activity>

        <!-- Psyなびコンテンツ -->
        <activity
            android:name=".ReadingHome"
            android:screenOrientation="portrait">
        </activity>

        <!-- タブナビゲーション -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 投票リスト -->
        <activity
            android:name=".VoteList"
            android:screenOrientation="portrait">
        </activity>

        <!-- 投票 -->
        <activity
            android:name=".VoteForAny"
            android:screenOrientation="portrait">
        </activity>

        <!-- 投票結果 -->
        <activity
            android:name=".VoteResult"
            android:screenOrientation="portrait">
        </activity>

        <!-- 動画視聴 -->
        <activity
            android:name=".PlayVideo"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>