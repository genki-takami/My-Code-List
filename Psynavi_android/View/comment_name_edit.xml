<?xml version="1.0" encoding="utf-8"?>
<!--コメントネーム編集画面のレイアウト-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".CommentNameEdit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_commentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="コメントネーム"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="230dp"
            android:layout_height="1dp"
            android:layout_below="@id/title_commentName"
            android:layout_centerHorizontal="true"
            android:background="@android:color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/label1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="現在のコメントネーム"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/currentCommentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#9F2196F3"
            android:ellipsize="end"
            android:padding="15dp"
            android:singleLine="true"
            android:text="匿名"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentCommentName"
            android:text="新しいコメントネーム"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editor_commentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label2"
            android:backgroundTint="#2196F3"
            android:hint="ここに入力"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editor_commentName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:background="#2C7CFF"
            android:drawableStart="@android:drawable/ic_popup_sync"
            android:drawableTint="@android:color/white"
            android:padding="10dp"
            android:text="更新"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>